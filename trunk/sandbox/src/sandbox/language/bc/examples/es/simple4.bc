(* Programa de ejemplo en BC: REPEAT *)

procedimiento Ejemplo;

inicio

  (* --- *)

  var
     indice:      entero;
     iteraciones: entero;
     num:         entero;
     b:           booleano;
  fin;

  indice := 0;

  repetir
    salida '\n';
    salida indice;
